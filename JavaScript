                            <span class="keyword">function</span> <span class="function">greet</span>(name) {<br>
                            &nbsp;&nbsp;<span class="keyword">return</span> <span class="string">`Hello, ${name}!`</span>;<br>
                            }<br><br>
                            
                            <span class="comment">// Function expression</span><br>
                            <span class="keyword">const</span> square = <span class="keyword">function</span>(num) {<br>
                            &nbsp;&nbsp;<span class="keyword">return</span> num * num;<br>
                            };<br><br>
                            
                            <span class="comment">// Arrow function</span><br>
                            <span class="keyword">const</span> add = (a, b) => a + b;<br><br>
                            
                            <span class="comment">// Scope example</span><br>
                            <span class="keyword">let</span> globalVar = <span class="string">"I'm global"</span>;<br><br>
                            
                            <span class="keyword">function</span> <span class="function">scopeExample</span>() {<br>
                            &nbsp;&nbsp;<span class="keyword">let</span> localVar = <span class="string">"I'm local"</span>;<br>
                            &nbsp;&nbsp;console.log(globalVar); <span class="comment">// Accessible</span><br>
                            &nbsp;&nbsp;console.log(localVar); &nbsp;<span class="comment">// Accessible</span><br>
                            }<br>
                        </div>
